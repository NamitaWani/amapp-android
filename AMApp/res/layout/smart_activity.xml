    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:elevation="7dp">

    <FrameLayout
        android:id="@+id/lytChildViewContainer"
