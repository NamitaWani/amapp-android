    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primary900</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">20dp</item>
        <item name="tabPaddingEnd">20dp</item>
        <item name="tabBackground">@color/primary50</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>

    </style>

    <style name="MyCustomTabLayout1" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primaryColor</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance1</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
    </style>

    <style name="MyCustomTabTextAppearance1" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="textAllCaps">true</item>

    </style>

    <style name="getPassTabStyle" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/textSecondary</item>
        <item name="tabBackground">@color/primaryColor</item>
        <item name="tabTextAppearance">@style/getPassTabStyleText</item>
        <item name="tabSelectedTextColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="getPassTabStyleText" parent="TextAppearance.Design.Tab">

        <item name="android:textColor">@color/grey_light</item>

    </style>


    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary900</item>

    </style>

    <style name="textInputLogin" parent="Theme.AppCompat">

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/accent</item>

    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>

    </style>





